{{#if children.length}}
  <span {{bind-attr class=":toggle-icon children.length::leaf"}} {{action toggle}}>
    {{#if isExpanded}}
     &#x25BC;
    {{else}}
     &#x25B6;
    {{/if}}
  </span>
  <a {{action toggle}} class="text">{{text}}</a>
{{else}}
  <a {{bind-attr href="link"}} class="text">{{text}}</a>
{{/if}}

{{#if isExpanded}}
  {{render "menuBranch" content}}
{{/if}}
