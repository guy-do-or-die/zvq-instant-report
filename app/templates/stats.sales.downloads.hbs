<div class="chart">  <div class="details">    <div class="field" {{action "toggleBase" "gross" on="click"}}>      <label {{bind-attr class="baseChecked.gross:checked"}}>Gross Revenue, {{currency.name}}</br>(excl. VAT)</label>       {{input type="text" value=gross}}     </div>    <div class="field" {{action "toggleBase" "royalty" on="click"}}>      <label {{bind-attr class="baseChecked.royalty:checked"}}>Total Royalties, {{currency.name}}</br>(excl. VAT)</label>       {{input type="text" value=royalty}}    </div>    <div class="field">      <label>Number of downloads</label>       {{input type="text" value=loads}}    </div>    <div class="field">      <label>Number of active users</label>       {{input type="text" value=activeUsers}}    </div>     </div>  <div class="chart-container">    <div class="axis-caption">      <label>        {{#if baseChecked.gross}}Gross Revenue, {{currency.name}} (excl. VAT){{/if}}        {{#if baseChecked.royalty}}Total Royalties,{{currency.name}} (excl. VAT){{/if}}      </label>    </div>    {{sales-downloads-chart lineData=chart selectedInterval=interval action="didChartClick"}}  </div></div>