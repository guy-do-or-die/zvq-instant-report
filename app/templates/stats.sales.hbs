<div class="chart">  <div class="details">    <div class="field" {{action "toggleBase" "gross" on="click"}}>      <label {{bind-attr class="baseChecked.gross:checked"}}>Gross Revenue, {{currency.name}}</br>(excl. VAT)</label>       {{input type="text" value=gross}}     </div>    <div class="field" {{action "toggleBase" "net" on="click"}}>       <label {{bind-attr class="baseChecked.net:checked"}}>Net Revenue, {{currency.name}}</br>(excl. VAT)</label>       {{input type="text" value=net}}     </div>    <div class="field" {{action "toggleBase" "royalty" on="click"}}>      <label {{bind-attr class="baseChecked.royalty:checked"}}>Total Royalties, {{currency.name}}</br>(excl. VAT)</label>       {{input type="text" value=royalty}}    </div>     </div>    <div class="chart-container">    <div class="axis-caption">      <label>        {{#if baseChecked.gross}}Gross Revenue,{{/if}}        {{#if baseChecked.net}}Net Revenue,{{/if}}        {{#if baseChecked.royalty}}Total Royalties,{{/if}}        {{currency.name}} (excl. VAT)      </label>    </div>    {{sales-chart lineData=chart selectedInterval=interval action="didChartClick"}}  </div></div>