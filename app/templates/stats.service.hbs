<div class="chart">  <div class="details">    <div class="field">      <label>Number of streams</label>       {{input type="text" value=stream}}       {{view Ember.Select           contentBinding="App.streamTypeController"          selectionBinding="selectedStreamType"           optionLabelPath="content.name"           optionValuePath="content.id"           prompt="Chose out of"          class="select"}}    </div>    <div class="field">       <label>Number of downloads</label>       {{input type="text" value=load}}       {{view Ember.Select           contentBinding="App.loadTypeController"          selectionBinding="selectedLoadType"           optionLabelPath="content.name"           optionValuePath="content.id"           prompt="Chose out of"          class="select"}}    </div>  </div>    <div class="chart-container">    <div class="axis-caption">      <label>Number of streams</label>    </div>    <div class="axis-caption right">      <label>Number of downloads</label>    </div>    {{service-chart lineData=chart selectedInterval=interval action="didChartClick"}}  </div></div>