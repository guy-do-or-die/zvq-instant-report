<div class="chart">  <div class="details">    <div class="field" {{action "toggleBase" "gross" on="click"}}>      <label {{bind-attr class="baseChecked.gross:checked"}}>Gross Revenue, {{currency.name}}</br>(excl. VAT)</label>       {{input type="text" value=gross}}     </div>    <div class="field" {{action "toggleBase" "royalty" on="click"}}>      <label {{bind-attr class="baseChecked.royalty:checked"}}>Total Royalties, {{currency.name}}</br>(excl. VAT)</label>       {{input type="text" value=royalty}}    </div>    <div class="field">      <label>Number of subscribers</label>       {{input type="text" value=subs}}    </div>       <div class="field">      <label>Number of streams</label>       {{input type="text" value=streams}}    </div>    <div class="field">      <label>Number of downloads</label>       {{input type="text" value=loads}}    </div>  </div>    <div class="chart-container">    <div class="axis-caption">      <label>        {{#if baseChecked.gross}}Gross Revenue,{{/if}}        {{#if baseChecked.royalty}}Total Royalties,{{/if}}        {{currency.name}} (excl. VAT)      </label>    </div>    {{sales-subscription-chart lineData=chart selectedInterval=interval action="didChartClick"}}  </div></div>