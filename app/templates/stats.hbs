<div class="tools">  <div class="dates-range">    <div class="field">      <label>From:</label> {{view App.DateField value=_from class="input"}}     </div>    <div class="field">      <label>To:</label> {{view App.DateField value=_to class="input"}}    </div>  </div>  {{#if notIndex}}    {{#if currencyShowed}}      <div class="field">        {{view Ember.Select             contentBinding="App.currencyController"            selectionBinding="selectedCurrency"             optionLabelPath="content.name"             optionValuePath="content.id"             prompt="Change currency"            class="select"}}      </div>    {{/if}}    {{#if filterShowed}}      <div class="field">        {{view Ember.Select           contentBinding="filters"           selectionBinding="selectedFilter"           optionLabelPath="content.name"           optionValuePath="content.id"           prompt="Add criteria for analysis"          class="select"}}      </div>    {{/if}}  {{/if}}  </div>{{outlet}}